<view class="template">
  <view class="template-name">{{template.name}}</view>
</view>

<view class="new-channel padding-box" wx:if="{{template.keyName}}">
  <view class="key">
    <input placeholder="请输入{{template.keyName}}" bindinput="keyChange"/>
  </view>
  <view>
    <button bindtap="submit" type="primary">确认</button>
  </view>
</view>

<view class="channels">
  <navigator class="channel padding-box" wx:for="{{channels}}" wx:key="_id" url="/pages/channel/channel?channelId={{item._id}}">
    <view class="name">{{item.name}}</view>
  </navigator>
</view>