/* miniprogram/pages/channel/templates.wxss */
.templates{
  flex-wrap: wrap;
  padding: 15px 20px;
}

.template{
  width: 27vw;
  box-sizing: border-box;
  margin-bottom: 15px;
  background: #fff;
  padding: 15px;
  border-radius: 15px;
}

.template-logo{
  width: 35px;
  height: 35px;
  border-radius: 50%;
  background: gray;
  margin:auto;
  padding: 5px;
  display: flex;
}

.text-logo{
  font-size: 25px;
  font-weight: 700;
  color: #fff;
  margin: auto;
}

.template-logo>image{
  width: 100%;
  height: 100%;
}

.template-name{
  font-size: 14px;
  margin-top:10px;
  text-align: center;
}